{
  "comments": {
    "lineComment": "'",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(Sub|Function|Class|Module|Namespace|If|For|While|Do|Select|Try|With|Region)\\b",
      "end": "^\\s*(End\\s+(Sub|Function|Class|Module|Namespace|If|For|While|Do|Select|Try|With|Region)|Next|Loop|End\\s+Region)\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(Sub|Function|Class|Module|Namespace|If|Else|ElseIf|For|While|Do|Select|Case|Try|Catch|Finally|With|Get|Set|Property)\\b.*$",
    "decreaseIndentPattern": "^\\s*(End\\s+(Sub|Function|Class|Module|Namespace|If|For|While|Do|Select|Try|With|Get|Set|Property)|Else|ElseIf|Case|Catch|Finally|Next|Loop)\\b.*$"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
  "onEnterRules": [
    {
      "beforeText": "^\\s*(Sub|Function|Class|Module|If|For|While|Do|Select|Try|With|Property|Get|Set)\\b.*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*(Else|ElseIf|Case|Catch|Finally)\\b.*$",
      "action": { "indent": "none" }
    },
    {
      "beforeText": "^\\s*(End\\s+\\w+|Next|Loop)\\b.*$",
      "action": { "indent": "outdent" }
    }
  ]
}
