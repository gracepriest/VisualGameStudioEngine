<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:VisualGameStudio.Shell.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="VisualGameStudio.Shell.Views.Dialogs.UseBaseTypeDialog"
        x:DataType="vm:UseBaseTypeDialogViewModel"
        Title="Use Base Type"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

  <DockPanel Margin="16">
    <!-- Header -->
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
      <TextBlock Text="Use Base Type" FontSize="16" FontWeight="Bold" Foreground="#CCCCCC"/>
      <TextBlock Text="Change a type declaration to use a base type or interface"
                 Foreground="#808080" Margin="0,4,0,0"/>
    </StackPanel>

    <!-- Current Symbol Info -->
    <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="0,0,0,16">
      <TextBlock Grid.Row="0" Grid.Column="0" Text="Symbol:" Foreground="#808080" Margin="0,0,8,4"/>
      <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
        <TextBlock Text="{Binding SymbolName}" FontFamily="Consolas" Foreground="#9CDCFE"/>
        <TextBlock Text="{Binding SymbolKind, StringFormat='({0})'}" Foreground="#808080" FontSize="11"/>
      </StackPanel>

      <TextBlock Grid.Row="1" Grid.Column="0" Text="Current Type:" Foreground="#808080" Margin="0,0,8,4"/>
      <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentType}"
                 FontFamily="Consolas" Foreground="#4EC9B0"/>

      <TextBlock Grid.Row="2" Grid.Column="0" Text="Declaration:" Foreground="#808080" Margin="0,0,8,0"/>
      <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Declaration}"
                 FontFamily="Consolas" Foreground="#DCDCAA" FontSize="11"
                 TextTrimming="CharacterEllipsis"/>
    </Grid>

    <!-- Base Type Selection -->
    <TextBlock DockPanel.Dock="Top"
               Text="Select base type:"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,4"/>

    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,12"
            Height="150">
      <ListBox ItemsSource="{Binding BaseTypes}"
               SelectedItem="{Binding SelectedBaseType}"
               Background="Transparent"
               Margin="4">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="4,2">
              <TextBlock Text="{Binding TypeName}"
                         FontFamily="Consolas"
                         FontSize="12"
                         Foreground="#4EC9B0"/>
              <TextBlock Text="{Binding TypeKind}"
                         FontSize="10"
                         Foreground="#569CD6"
                         VerticalAlignment="Center"/>
              <TextBlock Text="{Binding Description, StringFormat='- {0}'}"
                         FontSize="10"
                         Foreground="#808080"
                         VerticalAlignment="Center"/>
            </StackPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Border>

    <!-- Options -->
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
      <CheckBox IsChecked="{Binding UpdateAllOccurrences}"
                Content="Update all occurrences of this type in the file"
                Foreground="#CCCCCC"/>
    </StackPanel>

    <!-- Preview -->
    <TextBlock DockPanel.Dock="Top"
               Text="Preview:"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,4"/>
    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="0,0,0,12"
            MinHeight="40">
      <TextBlock Text="{Binding Preview}"
                 FontFamily="Consolas"
                 FontSize="12"
                 Foreground="#4EC9B0"
                 TextWrapping="Wrap"/>
    </Border>

    <!-- Error Message -->
    <TextBlock DockPanel.Dock="Top"
               Text="{Binding ErrorMessage}"
               Foreground="#F48771"
               FontSize="11"
               Margin="0,0,0,8"
               TextWrapping="Wrap"
               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

    <!-- Loading Indicator -->
    <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                IsVisible="{Binding IsLoading}"
                Margin="0,0,0,16">
      <TextBlock Text="Analyzing type hierarchy..." Foreground="#808080"/>
    </StackPanel>

    <!-- Buttons -->
    <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="8">
      <Button Content="Cancel"
              Command="{Binding CancelCommand}"
              Width="80"/>
      <Button Content="Apply"
              Command="{Binding ApplyCommand}"
              Width="100"
              Classes="accent"
              IsEnabled="{Binding CanApply}"/>
    </StackPanel>
  </DockPanel>
</Window>
