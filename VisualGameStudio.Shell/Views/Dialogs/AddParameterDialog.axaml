<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:VisualGameStudio.Shell.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="650"
        x:Class="VisualGameStudio.Shell.Views.Dialogs.AddParameterDialog"
        x:DataType="vm:AddParameterDialogViewModel"
        Title="Add Parameter"
        Width="550" Height="650"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

  <DockPanel Margin="16">
    <!-- Header -->
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
      <TextBlock Text="Add Parameter" FontSize="16" FontWeight="Bold" Foreground="#CCCCCC"/>
      <TextBlock Foreground="#808080" Margin="0,4,0,0">
        <TextBlock.Text>
          <MultiBinding StringFormat="Add a new parameter to '{0}'">
            <Binding Path="MethodName"/>
          </MultiBinding>
        </TextBlock.Text>
      </TextBlock>
      <TextBlock Foreground="#569CD6" FontSize="11" Margin="0,4,0,0"
                 IsVisible="{Binding ContainingType, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
        <TextBlock.Text>
          <MultiBinding StringFormat="In: {0}">
            <Binding Path="ContainingType"/>
          </MultiBinding>
        </TextBlock.Text>
      </TextBlock>
    </StackPanel>

    <!-- Current Signature -->
    <TextBlock DockPanel.Dock="Top"
               Text="Current signature:"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,4"/>
    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="0,0,0,12">
      <TextBlock Text="{Binding CurrentSignature}"
                 FontFamily="Consolas"
                 FontSize="12"
                 Foreground="#DCDCAA"
                 TextWrapping="Wrap"/>
    </Border>

    <!-- Parameter Details -->
    <TextBlock DockPanel.Dock="Top"
               Text="New parameter:"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,8"/>

    <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="0,0,0,12">
      <!-- Parameter Name -->
      <TextBlock Grid.Row="0" Grid.Column="0"
                 Text="Name:"
                 Foreground="#CCCCCC"
                 VerticalAlignment="Center"
                 Margin="0,0,12,8"/>
      <TextBox Grid.Row="0" Grid.Column="1"
               Text="{Binding ParameterName}"
               Watermark="parameterName"
               Margin="0,0,0,8"/>

      <!-- Parameter Type -->
      <TextBlock Grid.Row="1" Grid.Column="0"
                 Text="Type:"
                 Foreground="#CCCCCC"
                 VerticalAlignment="Center"
                 Margin="0,0,12,8"/>
      <AutoCompleteBox Grid.Row="1" Grid.Column="1"
                       ItemsSource="{Binding CommonTypes}"
                       Text="{Binding ParameterType}"
                       FilterMode="Contains"
                       Margin="0,0,0,8"/>

      <!-- Insert Position -->
      <TextBlock Grid.Row="2" Grid.Column="0"
                 Text="Position:"
                 Foreground="#CCCCCC"
                 VerticalAlignment="Center"
                 Margin="0,0,12,8"/>
      <ComboBox Grid.Row="2" Grid.Column="1"
                ItemsSource="{Binding InsertPositions}"
                SelectedValue="{Binding InsertPosition}"
                SelectedValueBinding="{Binding Position}"
                DisplayMemberBinding="{Binding DisplayText}"
                Margin="0,0,0,8"/>

      <!-- Modifiers -->
      <TextBlock Grid.Row="3" Grid.Column="0"
                 Text="Modifiers:"
                 Foreground="#CCCCCC"
                 VerticalAlignment="Center"
                 Margin="0,0,12,8"/>
      <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="16" Margin="0,0,0,8">
        <CheckBox IsChecked="{Binding IsByRef}"
                  Content="ByRef"
                  Foreground="#CCCCCC"/>
        <CheckBox IsChecked="{Binding IsOptional}"
                  Content="Optional"
                  Foreground="#CCCCCC"/>
      </StackPanel>

      <!-- Default Value (for Optional) -->
      <TextBlock Grid.Row="4" Grid.Column="0"
                 Text="Default:"
                 Foreground="#CCCCCC"
                 VerticalAlignment="Center"
                 Margin="0,0,12,8"
                 IsVisible="{Binding IsOptional}"/>
      <TextBox Grid.Row="4" Grid.Column="1"
               Text="{Binding DefaultValue}"
               Watermark="Default value (required for Optional)"
               IsVisible="{Binding IsOptional}"
               Margin="0,0,0,8"/>

      <!-- Call Site Value -->
      <TextBlock Grid.Row="5" Grid.Column="0"
                 Text="Call sites:"
                 Foreground="#CCCCCC"
                 VerticalAlignment="Center"
                 Margin="0,0,12,0"/>
      <StackPanel Grid.Row="5" Grid.Column="1">
        <CheckBox IsChecked="{Binding UpdateCallSites}"
                  Foreground="#CCCCCC"
                  Margin="0,0,0,4">
          <CheckBox.Content>
            <TextBlock>
              <TextBlock.Text>
                <MultiBinding StringFormat="Update {0} call site(s)">
                  <Binding Path="CallSiteCount"/>
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </CheckBox.Content>
        </CheckBox>
        <TextBox Text="{Binding CallSiteValue}"
                 Watermark="Value to use at call sites"
                 IsEnabled="{Binding UpdateCallSites}"
                 Margin="0,0,0,0"/>
      </StackPanel>
    </Grid>

    <!-- Existing Parameters -->
    <TextBlock DockPanel.Dock="Top"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,4"
               IsVisible="{Binding ExistingParameters.Count}">
      <TextBlock.Text>
        <MultiBinding StringFormat="Existing parameters ({0}):">
          <Binding Path="ExistingParameters.Count"/>
        </MultiBinding>
      </TextBlock.Text>
    </TextBlock>

    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,12"
            Height="80"
            IsVisible="{Binding ExistingParameters.Count}">
      <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding ExistingParameters}" Margin="8">
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="vm:ExistingParameterViewModel">
              <TextBlock Text="{Binding DisplayText}"
                         FontFamily="Consolas"
                         FontSize="11"
                         Foreground="#9CDCFE"
                         Margin="0,2"/>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>

    <!-- Error Message -->
    <TextBlock DockPanel.Dock="Top"
               Text="{Binding ErrorMessage}"
               Foreground="#F48771"
               FontSize="11"
               Margin="0,0,0,8"
               TextWrapping="Wrap"
               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

    <!-- Preview -->
    <TextBlock DockPanel.Dock="Top"
               Text="Preview:"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,4"/>
    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,16"
            MaxHeight="120">
      <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <TextBlock Text="{Binding Preview}"
                   FontFamily="Consolas, Courier New, monospace"
                   FontSize="12"
                   Foreground="#DCDCAA"
                   Padding="8"
                   TextWrapping="NoWrap"/>
      </ScrollViewer>
    </Border>

    <!-- Loading Indicator -->
    <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                IsVisible="{Binding IsLoading}"
                Margin="0,0,0,16">
      <TextBlock Text="Processing..." Foreground="#808080"/>
    </StackPanel>

    <!-- Buttons -->
    <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="8">
      <Button Content="Cancel"
              Command="{Binding CancelCommand}"
              Width="80"/>
      <Button Content="Add"
              Command="{Binding AddParameterCommand}"
              Width="100"
              Classes="accent"
              IsEnabled="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
    </StackPanel>
  </DockPanel>
</Window>
