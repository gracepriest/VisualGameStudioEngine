<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:VisualGameStudio.Shell.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="150"
        x:Class="VisualGameStudio.Shell.Views.Dialogs.GoToLineDialog"
        x:DataType="vm:GoToLineDialogViewModel"
        Title="Go To Line"
        Width="350" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#252526">

  <Window.Styles>
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="#CCCCCC"/>
    </Style>
    <Style Selector="TextBox">
      <Setter Property="Background" Value="#3C3C3C"/>
      <Setter Property="Foreground" Value="#CCCCCC"/>
      <Setter Property="BorderBrush" Value="#555555"/>
      <Setter Property="CaretBrush" Value="#FFFFFF"/>
      <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
    </Style>
    <Style Selector="TextBox:focus">
      <Setter Property="BorderBrush" Value="#007ACC"/>
    </Style>
    <Style Selector="Button">
      <Setter Property="Background" Value="#0E639C"/>
      <Setter Property="Foreground" Value="#FFFFFF"/>
      <Setter Property="Padding" Value="16,6"/>
      <Setter Property="CornerRadius" Value="2"/>
    </Style>
    <Style Selector="Button:pointerover">
      <Setter Property="Background" Value="#1177BB"/>
    </Style>
    <Style Selector="Button.cancel">
      <Setter Property="Background" Value="#3C3C3C"/>
    </Style>
    <Style Selector="Button.cancel:pointerover">
      <Setter Property="Background" Value="#4C4C4C"/>
    </Style>
  </Window.Styles>

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Line Number Input -->
    <StackPanel Grid.Row="0" Spacing="6">
      <TextBlock Text="{Binding PromptText}" FontSize="13"/>
      <TextBox x:Name="LineNumberTextBox"
               Text="{Binding LineNumberText}"
               FontSize="14"
               Padding="8,6">
        <TextBox.KeyBindings>
          <KeyBinding Gesture="Enter" Command="{Binding GoToLineCommand}"/>
          <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
        </TextBox.KeyBindings>
      </TextBox>
    </StackPanel>

    <!-- Error Message -->
    <TextBlock Grid.Row="1"
               Text="{Binding ErrorMessage}"
               Foreground="#F44747"
               FontSize="12"
               Margin="0,8,0,0"
               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

    <!-- Buttons -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="Go To" Command="{Binding GoToLineCommand}" IsDefault="True"/>
      <Button Content="Cancel" Command="{Binding CancelCommand}" Classes="cancel" IsCancel="True"/>
    </StackPanel>
  </Grid>

</Window>
