<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:VisualGameStudio.Shell.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="700"
        x:Class="VisualGameStudio.Shell.Views.Dialogs.PushMembersDownDialog"
        x:DataType="vm:PushMembersDownDialogViewModel"
        Title="Push Members Down"
        Width="650" Height="700"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

  <DockPanel Margin="16">
    <!-- Header -->
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
      <TextBlock Text="Push Members Down" FontSize="16" FontWeight="Bold" Foreground="#CCCCCC"/>
      <TextBlock Foreground="#808080" Margin="0,4,0,0">
        <TextBlock.Text>
          <MultiBinding StringFormat="Move members from '{0}' to derived classes">
            <Binding Path="SourceTypeName"/>
          </MultiBinding>
        </TextBlock.Text>
      </TextBlock>
    </StackPanel>

    <!-- Source Type -->
    <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,*" RowDefinitions="Auto" Margin="0,0,0,16">
      <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" Foreground="#808080" Margin="0,0,8,0"/>
      <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SourceTypeDeclaration}"
                 FontFamily="Consolas" Foreground="#4EC9B0"/>
    </Grid>

    <!-- Destinations Selection -->
    <DockPanel DockPanel.Dock="Top" Margin="0,0,0,4">
      <TextBlock Text="Push to derived classes:"
                 Foreground="#808080"
                 FontSize="11"
                 VerticalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Content="All" Command="{Binding SelectAllDestinationsCommand}" Padding="8,2"/>
        <Button Content="None" Command="{Binding SelectNoneDestinationsCommand}" Padding="8,2"/>
      </StackPanel>
    </DockPanel>

    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,12"
            Height="120">
      <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Destinations}" Margin="4">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <CheckBox IsChecked="{Binding IsSelected}" Margin="0,2">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <TextBlock Text="{Binding Name}"
                             FontFamily="Consolas"
                             FontSize="12"
                             Foreground="#4EC9B0"/>
                  <TextBlock Text="(external)" Foreground="#CCA700" FontSize="11"
                             IsVisible="{Binding !IsInSameFile}"/>
                </StackPanel>
              </CheckBox>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>

    <!-- Members Selection -->
    <DockPanel DockPanel.Dock="Top" Margin="0,0,0,4">
      <TextBlock Text="Members to push down:"
                 Foreground="#808080"
                 FontSize="11"
                 VerticalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Content="Select All" Command="{Binding SelectAllMembersCommand}" Padding="8,2"/>
        <Button Content="Select None" Command="{Binding SelectNoneMembersCommand}" Padding="8,2"/>
      </StackPanel>
    </DockPanel>

    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,12"
            Height="150">
      <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Members}" Margin="4">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <CheckBox IsChecked="{Binding IsSelected}" Margin="0,2">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <TextBlock Text="{Binding KindDisplay}"
                             FontFamily="Consolas"
                             FontSize="11"
                             Foreground="#569CD6"
                             Width="60"/>
                  <TextBlock Text="{Binding Signature}"
                             FontFamily="Consolas"
                             FontSize="12"
                             Foreground="#DCDCAA"/>
                  <TextBlock Text="{Binding Accessibility}"
                             FontSize="10"
                             Foreground="#808080"
                             VerticalAlignment="Center"/>
                </StackPanel>
              </CheckBox>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>

    <!-- Options -->
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
      <TextBlock Text="Options:" Foreground="#808080" FontSize="11" Margin="0,0,0,4"/>
      <CheckBox IsChecked="{Binding RemoveFromBase}"
                Content="Remove from base class after pushing"
                Foreground="#CCCCCC"
                Margin="0,0,0,4"/>
      <CheckBox IsChecked="{Binding MakeAbstractInBase}"
                Content="Make abstract in base class (add MustOverride)"
                Foreground="#CCCCCC"
                Margin="0,0,0,4"/>
      <CheckBox IsChecked="{Binding MarkAsOverrides}"
                Content="Mark as Overrides in derived classes"
                Foreground="#CCCCCC"
                IsEnabled="{Binding MakeAbstractInBase}"/>
    </StackPanel>

    <!-- Preview -->
    <TextBlock DockPanel.Dock="Top"
               Text="Preview:"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,4"/>
    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="0,0,0,12"
            MinHeight="40">
      <TextBlock Text="{Binding Preview}"
                 FontFamily="Consolas"
                 FontSize="12"
                 Foreground="#4EC9B0"
                 TextWrapping="Wrap"/>
    </Border>

    <!-- Error Message -->
    <TextBlock DockPanel.Dock="Top"
               Text="{Binding ErrorMessage}"
               Foreground="#F48771"
               FontSize="11"
               Margin="0,0,0,8"
               TextWrapping="Wrap"
               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

    <!-- Loading Indicator -->
    <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                IsVisible="{Binding IsLoading}"
                Margin="0,0,0,16">
      <TextBlock Text="Searching for derived classes..." Foreground="#808080"/>
    </StackPanel>

    <!-- Buttons -->
    <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="8">
      <Button Content="Cancel"
              Command="{Binding CancelCommand}"
              Width="80"/>
      <Button Content="Push Down"
              Command="{Binding PushDownCommand}"
              Width="100"
              Classes="accent"
              IsEnabled="{Binding CanPush}"/>
    </StackPanel>
  </DockPanel>
</Window>
