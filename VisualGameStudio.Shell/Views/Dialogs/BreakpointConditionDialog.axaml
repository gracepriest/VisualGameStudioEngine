<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:VisualGameStudio.Shell.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="280"
        x:Class="VisualGameStudio.Shell.Views.Dialogs.BreakpointConditionDialog"
        x:DataType="vm:BreakpointConditionDialogViewModel"
        Title="Breakpoint Settings"
        Width="450" Height="280"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#252526">

  <Window.Styles>
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="#CCCCCC"/>
    </Style>
    <Style Selector="TextBox">
      <Setter Property="Background" Value="#3C3C3C"/>
      <Setter Property="Foreground" Value="#CCCCCC"/>
      <Setter Property="BorderBrush" Value="#555555"/>
      <Setter Property="CaretBrush" Value="#FFFFFF"/>
      <Setter Property="FontFamily" Value="Cascadia Code, Consolas, monospace"/>
      <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style Selector="TextBox:focus">
      <Setter Property="BorderBrush" Value="#007ACC"/>
    </Style>
    <Style Selector="Button">
      <Setter Property="Background" Value="#0E639C"/>
      <Setter Property="Foreground" Value="#FFFFFF"/>
      <Setter Property="Padding" Value="16,6"/>
      <Setter Property="CornerRadius" Value="2"/>
    </Style>
    <Style Selector="Button:pointerover">
      <Setter Property="Background" Value="#1177BB"/>
    </Style>
    <Style Selector="Button.cancel">
      <Setter Property="Background" Value="#3C3C3C"/>
    </Style>
    <Style Selector="Button.cancel:pointerover">
      <Setter Property="Background" Value="#4C4C4C"/>
    </Style>
    <Style Selector="Button.clear">
      <Setter Property="Background" Value="#5A1D1D"/>
    </Style>
    <Style Selector="Button.clear:pointerover">
      <Setter Property="Background" Value="#7A2D2D"/>
    </Style>
    <Style Selector="RadioButton">
      <Setter Property="Foreground" Value="#CCCCCC"/>
      <Setter Property="Margin" Value="0,0,16,0"/>
    </Style>
  </Window.Styles>

  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Location Header -->
    <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="4" Padding="8,6" Margin="0,0,0,12">
      <TextBlock Text="{Binding Location}"
                 FontFamily="Cascadia Code, Consolas, monospace"
                 FontSize="12"
                 Foreground="#569CD6"/>
    </Border>

    <!-- Condition Type Selection -->
    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
      <RadioButton Content="Condition"
                   IsChecked="{Binding IsConditionalExpression}"
                   Command="{Binding SelectConditionalCommand}"/>
      <RadioButton Content="Hit Count"
                   IsChecked="{Binding IsHitCount}"
                   Command="{Binding SelectHitCountCommand}"/>
      <RadioButton Content="Log Message"
                   IsChecked="{Binding IsLogMessage}"
                   Command="{Binding SelectLogMessageCommand}"/>
    </StackPanel>

    <!-- Conditional Expression Input -->
    <StackPanel Grid.Row="2" Spacing="4" IsVisible="{Binding IsConditionalExpression}">
      <TextBlock Text="Break when expression is true:" FontSize="12"/>
      <TextBox x:Name="ConditionTextBox"
               Text="{Binding Condition}"
               Watermark="e.g., x > 5 And y = 10">
        <TextBox.KeyBindings>
          <KeyBinding Gesture="Enter" Command="{Binding SetConditionCommand}"/>
          <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
        </TextBox.KeyBindings>
      </TextBox>
    </StackPanel>

    <!-- Hit Count Input -->
    <StackPanel Grid.Row="2" Spacing="4" IsVisible="{Binding IsHitCount}">
      <TextBlock Text="Break when hit count equals:" FontSize="12"/>
      <TextBox x:Name="HitCountTextBox"
               Text="{Binding HitCount}"
               Watermark="e.g., 5, >5, >=10, %3">
        <TextBox.KeyBindings>
          <KeyBinding Gesture="Enter" Command="{Binding SetConditionCommand}"/>
          <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
        </TextBox.KeyBindings>
      </TextBox>
      <TextBlock Text="Formats: 5 (exactly), >5 (greater), >=5 (at least), %5 (every 5th)"
                 FontSize="10"
                 Foreground="#888888"
                 Margin="0,2,0,0"/>
    </StackPanel>

    <!-- Log Message Input -->
    <StackPanel Grid.Row="2" Spacing="4" IsVisible="{Binding IsLogMessage}">
      <TextBlock Text="Log message (tracepoint):" FontSize="12"/>
      <TextBox x:Name="LogMessageTextBox"
               Text="{Binding LogMessage}"
               Watermark="e.g., Value of x = {x}">
        <TextBox.KeyBindings>
          <KeyBinding Gesture="Enter" Command="{Binding SetConditionCommand}"/>
          <KeyBinding Gesture="Escape" Command="{Binding CancelCommand}"/>
        </TextBox.KeyBindings>
      </TextBox>
      <TextBlock Text="Use {expression} to evaluate and include values in the message"
                 FontSize="10"
                 Foreground="#888888"
                 Margin="0,2,0,0"/>
    </StackPanel>

    <!-- Help Text -->
    <TextBlock Grid.Row="3"
               TextWrapping="Wrap"
               Foreground="#888888"
               FontSize="11"
               Margin="0,12,0,0"
               VerticalAlignment="Top">
      <Run Text="Condition:" FontWeight="SemiBold"/> <Run Text="Breakpoint hits only when expression is true."/>
      <LineBreak/>
      <Run Text="Hit Count:" FontWeight="SemiBold"/> <Run Text="Breakpoint hits after specified number of executions."/>
      <LineBreak/>
      <Run Text="Log Message:" FontWeight="SemiBold"/> <Run Text="Logs message to output without stopping (tracepoint)."/>
    </TextBlock>

    <!-- Error Message -->
    <TextBlock Grid.Row="4"
               Text="{Binding ErrorMessage}"
               Foreground="#F44747"
               FontSize="12"
               Margin="0,8,0,0"
               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

    <!-- Buttons -->
    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,12,0,0">
      <Button Content="Clear" Command="{Binding ClearConditionCommand}" Classes="clear" ToolTip.Tip="Remove all conditions"/>
      <Button Content="OK" Command="{Binding SetConditionCommand}" IsDefault="True"/>
      <Button Content="Cancel" Command="{Binding CancelCommand}" Classes="cancel" IsCancel="True"/>
    </StackPanel>
  </Grid>

</Window>
