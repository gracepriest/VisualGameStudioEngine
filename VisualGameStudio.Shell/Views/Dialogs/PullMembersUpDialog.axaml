<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:VisualGameStudio.Shell.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
        x:Class="VisualGameStudio.Shell.Views.Dialogs.PullMembersUpDialog"
        x:DataType="vm:PullMembersUpDialogViewModel"
        Title="Pull Members Up"
        Width="600" Height="600"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

  <DockPanel Margin="16">
    <!-- Header -->
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
      <TextBlock Text="Pull Members Up" FontSize="16" FontWeight="Bold" Foreground="#CCCCCC"/>
      <TextBlock Foreground="#808080" Margin="0,4,0,0">
        <TextBlock.Text>
          <MultiBinding StringFormat="Move members from '{0}' to a base class or interface">
            <Binding Path="SourceTypeName"/>
          </MultiBinding>
        </TextBlock.Text>
      </TextBlock>
    </StackPanel>

    <!-- Source Type -->
    <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,*" RowDefinitions="Auto" Margin="0,0,0,16">
      <TextBlock Grid.Row="0" Grid.Column="0" Text="Source:" Foreground="#808080" Margin="0,0,8,0"/>
      <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SourceTypeDeclaration}"
                 FontFamily="Consolas" Foreground="#4EC9B0"/>
    </Grid>

    <!-- Destination Selection -->
    <TextBlock DockPanel.Dock="Top"
               Text="Pull to:"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,4"/>
    <ComboBox DockPanel.Dock="Top"
              ItemsSource="{Binding Destinations}"
              SelectedItem="{Binding SelectedDestination}"
              Margin="0,0,0,16"
              MinHeight="30">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="{Binding Name}" FontFamily="Consolas" Foreground="#4EC9B0"/>
            <TextBlock Text="{Binding KindDisplay}" Foreground="#808080" FontSize="11"/>
            <TextBlock Text="(external)" Foreground="#CCA700" FontSize="11" IsVisible="{Binding !IsInSameFile}"/>
          </StackPanel>
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>

    <!-- Members Selection -->
    <DockPanel DockPanel.Dock="Top" Margin="0,0,0,4">
      <TextBlock Text="Members to pull up:"
                 Foreground="#808080"
                 FontSize="11"
                 VerticalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
        <Button Content="Select All" Command="{Binding SelectAllCommand}" Padding="8,2"/>
        <Button Content="Select None" Command="{Binding SelectNoneCommand}" Padding="8,2"/>
      </StackPanel>
    </DockPanel>

    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,12"
            Height="180">
      <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Members}" Margin="4">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <CheckBox IsChecked="{Binding IsSelected}" Margin="0,2">
                <StackPanel Orientation="Horizontal" Spacing="8">
                  <TextBlock Text="{Binding KindDisplay}"
                             FontFamily="Consolas"
                             FontSize="11"
                             Foreground="#569CD6"
                             Width="60"/>
                  <TextBlock Text="{Binding Signature}"
                             FontFamily="Consolas"
                             FontSize="12"
                             Foreground="#DCDCAA"/>
                  <TextBlock Text="{Binding Accessibility}"
                             FontSize="10"
                             Foreground="#808080"
                             VerticalAlignment="Center"/>
                </StackPanel>
              </CheckBox>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Border>

    <!-- Options (only for base class) -->
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12" IsVisible="{Binding IsBaseClassSelected}">
      <TextBlock Text="Options:" Foreground="#808080" FontSize="11" Margin="0,0,0,4"/>
      <CheckBox IsChecked="{Binding MakeAbstract}"
                Content="Make abstract (add MustOverride in base class)"
                Foreground="#CCCCCC"
                Margin="0,0,0,4"/>
      <CheckBox IsChecked="{Binding KeepImplementation}"
                Content="Keep implementation in derived class"
                Foreground="#CCCCCC"
                IsEnabled="{Binding !MakeAbstract}"/>
    </StackPanel>

    <!-- Preview -->
    <TextBlock DockPanel.Dock="Top"
               Text="Preview:"
               Foreground="#808080"
               FontSize="11"
               Margin="0,0,0,4"/>
    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8"
            Margin="0,0,0,12"
            MinHeight="40">
      <TextBlock Text="{Binding Preview}"
                 FontFamily="Consolas"
                 FontSize="12"
                 Foreground="#4EC9B0"
                 TextWrapping="Wrap"/>
    </Border>

    <!-- Error Message -->
    <TextBlock DockPanel.Dock="Top"
               Text="{Binding ErrorMessage}"
               Foreground="#F48771"
               FontSize="11"
               Margin="0,0,0,8"
               TextWrapping="Wrap"
               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

    <!-- Loading Indicator -->
    <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                IsVisible="{Binding IsLoading}"
                Margin="0,0,0,16">
      <TextBlock Text="Analyzing class hierarchy..." Foreground="#808080"/>
    </StackPanel>

    <!-- Buttons -->
    <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="8">
      <Button Content="Cancel"
              Command="{Binding CancelCommand}"
              Width="80"/>
      <Button Content="Pull Up"
              Command="{Binding PullUpCommand}"
              Width="100"
              Classes="accent"
              IsEnabled="{Binding CanPull}"/>
    </StackPanel>
  </DockPanel>
</Window>
