<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:VisualGameStudio.Shell.ViewModels.Dialogs"
        xmlns:models="using:VisualGameStudio.Core.Models"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="VisualGameStudio.Shell.Views.Dialogs.BuildConfigurationDialog"
        x:DataType="vm:BuildConfigurationDialogViewModel"
        Title="Build Configurations"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

  <Grid RowDefinitions="Auto,*,Auto" Margin="16">
    <!-- Header -->
    <StackPanel Grid.Row="0" Margin="0,0,0,16">
      <TextBlock Text="Build Configurations"
                 Foreground="#FFFFFF"
                 FontSize="16"
                 FontWeight="SemiBold"
                 Margin="0,0,0,8"/>
      <TextBlock Text="Manage build configurations for your project. Each configuration defines how your project is compiled."
                 Foreground="#808080"
                 FontSize="12"
                 TextWrapping="Wrap"/>
    </StackPanel>

    <!-- Content -->
    <Grid Grid.Row="1" ColumnDefinitions="200,*">
      <!-- Configuration List -->
      <Border Grid.Column="0" Background="#252526" CornerRadius="4" Margin="0,0,8,0">
        <DockPanel>
          <!-- Add Configuration -->
          <Border DockPanel.Dock="Bottom" Background="#2D2D2D" Padding="8">
            <Grid ColumnDefinitions="*,Auto">
              <TextBox Grid.Column="0"
                       Text="{Binding NewConfigurationName}"
                       Watermark="New config name..."
                       FontSize="12"/>
              <Button Grid.Column="1"
                      Command="{Binding AddConfigurationCommand}"
                      Classes="toolbarButton"
                      Margin="4,0,0,0">
                <TextBlock Text="+" FontSize="16" Foreground="#CCCCCC"/>
              </Button>
            </Grid>
          </Border>

          <!-- List Header -->
          <Border DockPanel.Dock="Top" Background="#3C3C3C" Padding="8,6">
            <Grid ColumnDefinitions="*,Auto,Auto">
              <TextBlock Grid.Column="0" Text="Configurations" Foreground="#CCCCCC" FontWeight="SemiBold" FontSize="12"/>
              <Button Grid.Column="1"
                      Command="{Binding DuplicateConfigurationCommand}"
                      Classes="toolbarButton"
                      ToolTip.Tip="Duplicate">
                <TextBlock Text="⧉" FontSize="12" Foreground="#CCCCCC"/>
              </Button>
              <Button Grid.Column="2"
                      Command="{Binding RemoveConfigurationCommand}"
                      Classes="toolbarButton"
                      ToolTip.Tip="Remove">
                <TextBlock Text="×" FontSize="14" Foreground="#CCCCCC"/>
              </Button>
            </Grid>
          </Border>

          <!-- Configuration List -->
          <ListBox ItemsSource="{Binding Configurations}"
                   SelectedItem="{Binding SelectedConfiguration}"
                   Background="Transparent">
            <ListBox.ItemTemplate>
              <DataTemplate>
                <TextBlock Text="{Binding Name}"
                           Foreground="#CCCCCC"
                           Padding="8,4"/>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>
        </DockPanel>
      </Border>

      <!-- Configuration Editor -->
      <Border Grid.Column="1" Background="#252526" CornerRadius="4" Padding="16">
        <ScrollViewer IsVisible="{Binding SelectedConfiguration, Converter={x:Static ObjectConverters.IsNotNull}}">
          <StackPanel Spacing="16" DataContext="{Binding SelectedConfiguration}">
            <!-- Name -->
            <StackPanel Spacing="4">
              <TextBlock Text="Configuration Name" Foreground="#569CD6" FontSize="12"/>
              <TextBox Text="{Binding Name}"
                       Background="#3C3C3C"
                       Foreground="#CCCCCC"/>
            </StackPanel>

            <!-- Output Path -->
            <StackPanel Spacing="4">
              <TextBlock Text="Output Path" Foreground="#569CD6" FontSize="12"/>
              <TextBox Text="{Binding OutputPath}"
                       Background="#3C3C3C"
                       Foreground="#CCCCCC"/>
            </StackPanel>

            <!-- Define Constants -->
            <StackPanel Spacing="4">
              <TextBlock Text="Define Constants (semicolon-separated)" Foreground="#569CD6" FontSize="12"/>
              <TextBox Text="{Binding DefineConstants}"
                       Background="#3C3C3C"
                       Foreground="#CCCCCC"
                       Watermark="DEBUG;TRACE"/>
            </StackPanel>

            <!-- Compiler Options -->
            <Border Background="#2D2D2D" CornerRadius="4" Padding="12">
              <StackPanel Spacing="8">
                <TextBlock Text="Compiler Options" Foreground="#569CD6" FontWeight="SemiBold"/>

                <CheckBox IsChecked="{Binding DebugSymbols}"
                          Content="Generate debug symbols"
                          Foreground="#CCCCCC"/>

                <CheckBox IsChecked="{Binding Optimize}"
                          Content="Optimize code"
                          Foreground="#CCCCCC"/>

                <CheckBox IsChecked="{Binding TreatWarningsAsErrors}"
                          Content="Treat warnings as errors"
                          Foreground="#CCCCCC"/>
              </StackPanel>
            </Border>

            <!-- Warning Level -->
            <StackPanel Spacing="4">
              <TextBlock Text="Warning Level" Foreground="#569CD6" FontSize="12"/>
              <ComboBox ItemsSource="{Binding WarningLevels}"
                        SelectedItem="{Binding WarningLevel}"
                        Background="#3C3C3C"
                        Foreground="#CCCCCC"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
          </StackPanel>
        </ScrollViewer>
      </Border>
    </Grid>

    <!-- Buttons -->
    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,16,0,0"
                Spacing="8">
      <Button Content="OK"
              Width="80"
              Click="OnOkClick"
              Classes="primary"/>
      <Button Content="Cancel"
              Width="80"
              Click="OnCancelClick"/>
    </StackPanel>
  </Grid>

</Window>
