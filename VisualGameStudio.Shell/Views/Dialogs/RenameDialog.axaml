<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:VisualGameStudio.Shell.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400"
        x:Class="VisualGameStudio.Shell.Views.Dialogs.RenameDialog"
        x:DataType="vm:RenameDialogViewModel"
        Title="Rename Symbol"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1E1E1E">

  <DockPanel Margin="16">
    <!-- Header -->
    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,16">
      <TextBlock Text="Rename Symbol" FontSize="16" FontWeight="Bold" Foreground="#CCCCCC"/>
      <TextBlock Text="{Binding OriginalName, StringFormat='Renaming: {0}'}"
                 Foreground="#808080" Margin="0,4,0,0"/>
    </StackPanel>

    <!-- New Name Input -->
    <Grid DockPanel.Dock="Top" RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*" Margin="0,0,0,16">
      <TextBlock Grid.Row="0" Grid.Column="0"
                 Text="New name:"
                 Foreground="#CCCCCC"
                 VerticalAlignment="Center"
                 Margin="0,0,12,0"/>
      <TextBox Grid.Row="0" Grid.Column="1"
               Text="{Binding NewName}"
               Watermark="Enter new name..."
               x:Name="NewNameTextBox"/>
      <TextBlock Grid.Row="1" Grid.Column="1"
                 Text="{Binding ErrorMessage}"
                 Foreground="#F48771"
                 FontSize="11"
                 Margin="0,4,0,0"
                 IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
    </Grid>

    <!-- Preview Toggle -->
    <CheckBox DockPanel.Dock="Top"
              IsChecked="{Binding PreviewChanges}"
              Content="Preview changes"
              Foreground="#CCCCCC"
              Margin="0,0,0,8"/>

    <!-- References List -->
    <Border DockPanel.Dock="Top"
            Background="#252526"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="4"
            Margin="0,0,0,16"
            IsVisible="{Binding PreviewChanges}">
      <DockPanel>
        <TextBlock DockPanel.Dock="Top"
                   Text="{Binding References.Count, StringFormat='References found: {0}'}"
                   Foreground="#808080"
                   FontSize="11"
                   Margin="8,8,8,4"/>

        <ScrollViewer MaxHeight="150">
          <ItemsControl ItemsSource="{Binding References}">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Padding="8,4" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
                  <Grid ColumnDefinitions="Auto,*">
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsIncluded}"
                              Margin="0,0,8,0"/>
                    <StackPanel Grid.Column="1">
                      <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding FileName}" Foreground="#DCDCAA"/>
                        <TextBlock Text="{Binding Line, StringFormat='Line {0}'}"
                                   Foreground="#606060" FontSize="11"/>
                        <Border Background="#569CD6"
                                CornerRadius="2"
                                Padding="4,1"
                                IsVisible="{Binding IsDefinition}">
                          <TextBlock Text="Definition" Foreground="White" FontSize="9"/>
                        </Border>
                      </StackPanel>
                      <TextBlock Text="{Binding Text}"
                                 Foreground="#808080"
                                 FontSize="11"
                                 TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </ScrollViewer>
      </DockPanel>
    </Border>

    <!-- Loading Indicator -->
    <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                IsVisible="{Binding IsLoading}"
                Margin="0,0,0,16">
      <TextBlock Text="Loading..." Foreground="#808080"/>
    </StackPanel>

    <!-- Buttons -->
    <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="8">
      <Button Content="Cancel"
              Command="{Binding CancelCommand}"
              Width="80"/>
      <Button Content="Rename"
              Command="{Binding RenameCommand}"
              Width="80"
              Classes="accent"
              IsEnabled="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
    </StackPanel>
  </DockPanel>
</Window>
