        {
          "source": "VB/ConsoleApp.vbproj",
          "destination": "{ProjectName}.vbproj"
        }
      ],
      "C++": [
        {
          "source": "Cpp/main.cpp",
          "destination": "main.cpp"
        },
        {
          "source": "Cpp/ConsoleApp.vcxproj",
          "destination": "{ProjectName}.vcxproj"
        }
      ]
    }
  },

